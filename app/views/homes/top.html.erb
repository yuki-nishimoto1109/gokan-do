<div class="container">

  <div class="row mt-4">
    <%= image_tag "logo.png", class: "mx-auto", style: "max-width: 580px;" %>
  </div>

  <div class="row">
    <div class="col-9 col-lg-6 mx-auto">
      <%= form_with model: User.new do |f| %>
        <%= f.text_field :name,
            required: true, placeholder: "プレイヤー名を入力",
            class: "form-control form-control-lg text-center" %>
        <div class="text-center">
        <%= f.submit "決定",
            class: "btn btn-secondary btn-block btn-lg w-75 my-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

