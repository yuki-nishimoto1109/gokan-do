<div id="data"
  data-room-id="<%= @room.id %>"
  data-user-id="<%= current_user.id %>">
</div>

<div class="container">
  <div class="row text-center my-4">
    <h1><%= @room.name %></h1>
  </div>

  <div class="row my-4">
    <div class="col-10 mx-auto">
      <%= link_to "GAME START", answer_room_path(@room),
          class: "btn btn-secondary btn-lg w-100" %>
    </div>
    <div class="col-9 mx-auto">
      <div id="members" class="my-4">
        <%= render "members", users: @room.users %>
      </div>
    </div>
  </div>

</div>


