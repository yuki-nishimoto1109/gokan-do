<div class="container">

  <div class="row my-4">
    <h1 class="text-center">Select Rooms</h1>
    <span class="text-truncate">UserName: <%= current_user.name %></span>
  </div>

  <div class="row row-cols-sm-2 row-cols-md-4">
    <% @rooms.each do |room| %>
      <%= link_to start_room_path(room), class: "my-2 text-decoration-none" do %>
        <div class="col">
          <div class="card text-center h-50 text-dark bg-light">
            <div class="card-body">
              <h3 class="card-title"><%= room.name %></h3>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>